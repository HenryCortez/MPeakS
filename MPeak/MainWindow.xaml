<Window x:Class="MPeak.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MPeak"
        mc:Ignorable="d"
        Title="Conversor de Video" Height="300" Width="400">
    <Grid>
        <Button Name="btnSeleccionarArchivo" Content="Seleccionar MP4" Click="btnSeleccionarArchivo_Click" 
                HorizontalAlignment="Center" VerticalAlignment="Top" Margin="10"/>

        <Button Name="btnConvertir" Content="Convertir a MP3" Click="btnConvertir_Click" 
                HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10"/>

        <TextBlock Name="lblEstado" Text="Esperando archivo..." HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="10"/>
    </Grid>
</Window>
